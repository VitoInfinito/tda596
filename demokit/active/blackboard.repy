# ------------------------------------------------------------------------------    
# Returns the first found string following search in lines
# ------------------------------------------------------------------------------ 
def parse_line(lines, searchfield):
  for line in lines.split('\n'):
    line_index = line.find(searchfield)
    if line_index != -1:
      return line[line_index+len(searchfield):]

